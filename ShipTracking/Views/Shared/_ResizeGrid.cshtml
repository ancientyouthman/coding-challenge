@model ResizeGridModel

<div id="ships-control-panel">

    <div class="col-md-4">
        <div class="row">
            <div id="resize-grid-errors" class="alert alert-dismissable alert-danger" style="display:none;">
            </div>
        </div>
        <h3>Resize grid</h3>
        <form id="form-resize-grid">
            <div class="row">
                <label>X</label>
                <input type="text" name="X" />
            </div>
            <div class="row">
                <label>Y</label>
                <input type="text" name="Y" />
            </div>
            <div class="row">
                <button type="button" id="btn-resize-grid" class="btn btn-default">Resize grid</button>
            </div>
        </form>
    </div>
</div>
