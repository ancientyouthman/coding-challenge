@model AddShipModel


    <div class="col-md-4">
        <div class="row">
            <div id="add-ship-errors" class="alert alert-dismissable alert-danger" style="display:none;">
            </div>
        </div>
        <h3>Add ship</h3>
        <form id="form-add-ship">
            @*
                // Realised the spec said that the inputfor direction had to be a string
                // this will work as-is as long as the AddShipModel.Orientation property is of type Direction (enum)
                <div class="row">
                <label>Orientation</label>
                <select name="Direction">
                    <option value="North">North</option>
                    <option value="East">East</option>
                    <option value="South">South</option>
                    <option value="West">West</option>
                </select>
            </div>
                *@

            <div class="row">
                <label>Orientation</label>
                <input maxlength="1" type="text" name="Orientation" />
            </div>
            <div class="row">
                <label>X</label>
                <input type="text" name="Position.X" />
            </div>
            <div class="row">
                <label>Y</label>
                <input type="text" name="Position.Y" />
            </div>
            <div class="row">
                <button type="button" id="btn-add-ship" class="btn btn-default">Add ship</button>
            </div>
        </form>
    </div>
